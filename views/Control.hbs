{{>header}}
{{>dropdown}}
<script type="text/javascript" src="js/js.js"></script>
<script type="text/javascript" src="js/grafica.js"></script>

<section class="card" id="InfoObra">
	<div class="card-head">
		<h1 class="card-title">{{obra.titulo}}</h1>
		<h6 class="card-subtitle">{{obra.autor}}</h6>
	</div>
	<div class="card-body">
		<p class="card-text">{{obra.descripcion}}</p>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>#</th>
					<th>Pregunta</th>
					<th>Enviar</th>
					<th>Mostrar</th>
				</tr>
			</thead>
			<tbody>

		{{#each obra.preguntas}}
			<tr>
				<th>{{this.n}}</th>
				<td>{{this.pregunta}}</td>
				<td><button class="btn" onclick="EnviarPregunta('{{this.idPregunta}}','{{this.pregunta}}')">E</button></td>
				<td><button class="btn" onclick="calcular('{{this.idPregunta}}','{{this.pregunta}}')">mostrar</button></td>
			</tr>
		{{/each}}
			
			</tbody>
		</table>
	</div>
	<div class="card-footer">
		<form class="form-group"method="post" action="addPregunta">
			<input class="form-control" type="text" name="pregunta" autocomplete="off" placeholder="Pregunta..." required style="display:inline; margin-bottom:1%;" >
			<input type="hidden" name="_id" value="{{obra._id}}">
			<input type="submit" name="Enviar" value="AÃ±adir" class="btn btn-danger">
		</form>
	</div>
	{{#if_presentando obra.presentando}}
		<form method="post" action="/cerrarPresentacion">
			<input type="hidden" name="id" value="{{obra._id}}">
			<input type="submit" name="cerrar" value="Cerrar presentacion" class="btn btn-danger">
		</form>
	{{/if_presentando}}
	<form method="get" action="/obras">
		<button class="btn" style="color:cyan;">Go back</button>
	</form>
</section>
{{>footer}}